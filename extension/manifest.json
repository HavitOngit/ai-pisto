{
  "manifest_version": 3,
  "name": "AI Pisto",
  "version": "0.1.0",
  "description": "Capture page text mutations and show aggregated logs in the options page.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "options_page": "options.html",
  "icons": {
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "AI Pisto",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
